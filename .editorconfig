root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.c]
indent_style = tab
indent_size = 2

[*.json]
indent_style = tab
indent_size = 2

[*.html]
indent_style = tab
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.sh]
indent_size = 2
indent_style = tab
